NAME	=	libftgetnextline.a

CFLSGS	=	-Wall -Werror -Wextra

SRCS	=	get_next_line.c get_next_line_utils.c

OBJS	=	$(patsubst %c,%o,$(SRCS))

all: $(NAME)

$(NAME): $(OBJS)
	ar rcs $@ $?

%o: %c get_next_line.h
	cc $(CFLAGS) -c $< -o $@

test: re
	cc $(CFLAGS) -g3 -O0 -lbsd main.c $(NAME) -o test

clean:
	rm -f $(OBJS)

fclean:
	rm -f $(OBJS) $(NAME)

re: fclean all

.PHONY: all clean fclean re